<Border x:Class="HavenSoft.HexManiac.WPF.Controls.AutocompleteOverlay"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:HavenSoft.HexManiac.WPF.Controls"
   Margin="5,0,0,0"
   HorizontalAlignment="Left"
   VerticalAlignment="Top"
   BorderThickness="1"
   BorderBrush="{DynamicResource Secondary}"
   Background="{DynamicResource Background}"
   Padding="1"
   Visibility="Collapsed">
   <Border.RenderTransform>
      <TranslateTransform x:Name="AutocompleteTransform"/>
   </Border.RenderTransform>
   <ItemsControl Name="AutocompleteItems">
      <ItemsControl.ItemTemplate>
         <DataTemplate>
            <Button Content="{Binding DisplayText}" Background="{DynamicResource Background}" Click="AutocompleteOptionChosen">
               <Button.Style>
                  <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                     <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                           <Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
                        </DataTrigger>
                     </Style.Triggers>
                  </Style>
               </Button.Style>
            </Button>
         </DataTemplate>
      </ItemsControl.ItemTemplate>
   </ItemsControl>
</Border>
